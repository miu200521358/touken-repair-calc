{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2015",
    "lib": ["DOM", "ES2019"],
    "rootDir": "src",
    "outDir": "public",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
